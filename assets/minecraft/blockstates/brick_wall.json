{
    "__comment": "JimStoneCraft - 2019",
    "multipart": [
        {   "when": { "up": "true" },
            "apply": [
            { "model": "block/brick_wall_post" },
            { "model": "block/brick_wall_post1" },
            { "model": "block/brick_wall_post2" },
            { "model": "block/brick_wall_post3" }
            ]
        },
        {   "when": { "north": "true" },
            "apply": [
            { "model": "block/brick_wall_side", "uvlock": true },
            { "model": "block/brick_wall_side1", "uvlock": true },
            { "model": "block/brick_wall_side2", "uvlock": true },
            { "model": "block/brick_wall_side3", "uvlock": true }
            ]
        },
        {   "when": { "east": "true" },
            "apply": [
            { "model": "block/brick_wall_side", "y": 90, "uvlock": true },
            { "model": "block/brick_wall_side1", "y": 90, "uvlock": true },
            { "model": "block/brick_wall_side2", "y": 90, "uvlock": true },
            { "model": "block/brick_wall_side3", "y": 90, "uvlock": true }
            ]
        },
        {   "when": { "south": "true" },
            "apply": [
            { "model": "block/brick_wall_side", "y": 180, "uvlock": true },
            { "model": "block/brick_wall_side1", "y": 180, "uvlock": true },
            { "model": "block/brick_wall_side2", "y": 180, "uvlock": true },
            { "model": "block/brick_wall_side3", "y": 180, "uvlock": true }
            ]
        },
        {   "when": { "west": "true" },
            "apply": [
            { "model": "block/brick_wall_side", "y": 270, "uvlock": true },
            { "model": "block/brick_wall_side1", "y": 270, "uvlock": true },
            { "model": "block/brick_wall_side2", "y": 270, "uvlock": true },
            { "model": "block/brick_wall_side3", "y": 270, "uvlock": true }
            ]
        }
    ]
}
